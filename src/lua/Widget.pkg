$#include <Widget.h> 
$#include <Types.h>
$#include <SDL.h>
$#include <ActionListener.h>
$pfile "Object.pkg"

namespace Rangers
{
class Widget: public Object
{
public:
    void draw();

    Rangers::Rect getBoundingRect();
    void mouseMove(int x, int y);
    void mouseEnter();
    void mouseLeave();
    
    void mouseDown(uint8_t key, int x, int y);
    void mouseUp(uint8_t key, int x, int y);
    void mouseClick(int x, int y);
    
    int width() const;
    int height() const;
    
    void setWidth(int width);
    void setHeight(int height);
    void setGeometry(int width, int height);
    
    void addWidget(Rangers::Widget *w);
    void removeWidget(Rangers::Widget *w);

    void addListener(Rangers::ActionListener* listener);
    void removeListener(Rangers::ActionListener* listener);
};
}
